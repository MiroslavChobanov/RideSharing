@model IEnumerable<TripDetailsServiceModel>
@{
    ViewData["Title"] = "All Trips";
}
<h3>All Available Trips</h3>
<section class="py-5">
    <div class="container">
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Start Time</th>
                        <th scope="col">End Time</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Pick-Up Location</th>
                        <th scope="col">Drop-Off Location</th>
                        <th scope="col">Seats</th>
                        <th scope="col">Trip Cost</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>                     
                </thead>
                <tbody>
                    @foreach (var trip in Model)
                    {
                            <tr>
                                <td>@trip.StartTime</td>
                                <td>@trip.EndTime</td>
                                <td>@trip.Duration</td>
                                <td>@trip.PickUpLocation</td>
                                <td>@trip.DropOffLocation</td>
                                <td>@trip.Seats</td>
                                <td>@trip.TripCost</td>
                                <td>
                                        <a asp-controller="Trips" asp-action="Join" asp-route-id="@trip.Id" class="btn btn-success">Join</a>
                                        <a asp-controller="Trips" asp-action="Edit" asp-route-id="@trip.Id" class="btn btn-dark">Edit</a>
                                        <a asp-controller="Trips" asp-action="Details" asp-route-id="@trip.Id" class="btn btn-primary">Info</a>
                                        <a asp-controller="Trips" asp-action="Postpone" asp-route-id="@trip.Id" class="btn btn-danger">Postpone</a>
                                </td>
                            </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>