@model IEnumerable<TripDetailsServiceModel>
@{
    ViewData["Title"] = "All Trips";
}
<h3>All Available Trips</h3>
<section class="py-5">
    <div class="container">
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">StartTime</th>
                        <th scope="col">Duration</th>
                        <th scope="col">PickUpLocation</th>
                        <th scope="col">DropOffLocation</th>
                        <th scope="col">Seats</th>
                        <th scope="col">TripCost</th>
                    </tr>                     
                </thead>
                <tbody>
                    @foreach (var trip in Model)
                    {
                            <tr>
                                <th scope="row">@trip.StartTime</th>
                                <td>@trip.Duration</td>
                                <td>@trip.PickUpLocation</td>
                                <td>@trip.DropOffLocation</td>
                                <td>@trip.Seats</td>
                                <td>
                                    <div class="button-holder">
                                        <a href="/Trips/Details?tripId=@trip.Id" class="btn btn-info text-uppercase">Info</a>
                                    </div>
                                </td>
                            </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>