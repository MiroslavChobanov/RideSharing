@model RideSharing.Services.Vehicles.Models.VehicleDetailsServiceModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="card" style="width: 350px;">
    <img class="card-img-top" src="@Model.ImagePath" alt="@Model.Brand @Model.Model - @Model.YearOfCreation ">
    </div>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearOfCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DriverName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Редактиране</a> 
    <a asp-action="MyVehicles" class="btn btn-primary">Към списъка</a>
</div>
