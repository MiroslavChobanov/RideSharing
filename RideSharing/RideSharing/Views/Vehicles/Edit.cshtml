@model RideSharing.Models.Vehicles.CreateVehicleFormModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        
        <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Vehicle brand here...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Vehicle model here...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfCreation"></label>
                <textarea asp-for="YearOfCreation" rows="4" class="form-control" placeholder="Year of creation here..."></textarea>
                <span asp-validation-for="YearOfCreation" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastServicingDate"></label>
                <input asp-for="LastServicingDate" class="form-control" placeholder="Last Service Date here..">
                <span asp-validation-for="LastServicingDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control" placeholder="Image URL here...">
                <span asp-validation-for="ImagePath" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeId"></label>
                <select asp-for="VehicleTypeId" class="form-control">
                    @foreach (var vehicleType in Model.VehicleTypes)
                    {
                        <option value="@vehicleType.Id">@vehicleType.Type</option>
                    }
                </select>
                <span asp-validation-for="VehicleTypeId" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}