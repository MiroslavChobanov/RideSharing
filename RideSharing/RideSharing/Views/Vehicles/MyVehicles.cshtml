@model IEnumerable<VehicleDetailsServiceModel>
@{
    ViewData["Title"] = "My vehicles";
}

<div class="col-md-12">
<div class="card">
    @if (!Model.Any())
{
    <h2 class="text-center">You do not have any vehicles yet!</h2>
    <h2 class="text-center">Want to add your first one?</h2>
    <h2 class="text-center">Click the button below.</h2>
    <a asp-controller="Vehicles" asp-action="Add" class="btn btn-primary text-center">Add vehicle</a>
}
</div>
</div>


<div class="row">
    @foreach (var vehicle in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img  class="card-img-top" src="@vehicle.ImagePath" alt="@vehicle.Brand @vehicle.Model - @vehicle.YearOfCreation" style="width:100%">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@vehicle.Brand @vehicle.Model @vehicle.YearOfCreation </h5>
                        <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary">View</a>
                        <a asp-controller="Vehicles" asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-dark">Edit</a>
                        <a asp-controller="Vehicles" asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>